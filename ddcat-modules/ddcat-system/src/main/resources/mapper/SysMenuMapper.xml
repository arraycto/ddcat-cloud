<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ddcat.system.mapper.SysMenuMapper">

    <select id="getPermissionsByRoleIds" resultType="java.lang.String">
        select permission from sys_menu
        where id in(
        select menu_id from sys_role_menu
        where role_id in
        <foreach item="roleId" collection="list" separator="," open="(" close=")" index="">
            #{roleId}
        </foreach>
        )
        and permission is not null
    </select>

</mapper>